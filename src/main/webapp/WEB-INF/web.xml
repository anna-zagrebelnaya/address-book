<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Address-book</display-name>

    <servlet>
        <servlet-name>Address-book</servlet-name>
        <servlet-class>com.anka.servlets.AddressBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Address-book</servlet-name>
        <url-pattern>/AddressBookServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>com.anka.servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
